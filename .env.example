# ============================================================
# Israel Public Transit - Real-Time Monitoring Platform
# Copy this file to .env and fill in your credentials
# ============================================================

# ── משרד התחבורה (MOT) - Israel Open Data API ─────────────
# Registration: https://open-bus-stride-api.hasadna.org.il/
# Also used: https://gtfs.mot.gov.il (GTFS-RT feeds - free, no key needed)
MOT_API_KEY=your_mot_api_key_here

# GTFS-RT feed URLs (public, no key required)
GTFS_RT_BUS_URL=https://gtfs.mot.gov.il/gtfsfiles/TripUpdates.pb
GTFS_RT_VEHICLE_URL=https://gtfs.mot.gov.il/gtfsfiles/VehiclePositions.pb
GTFS_RT_ALERTS_URL=https://gtfs.mot.gov.il/gtfsfiles/ServiceAlerts.pb

# Open Bus Stride API (hasadna - free, no key)
OPEN_BUS_API_URL=https://open-bus-stride-api.hasadna.org.il/

# Israel Railways API (free)
RAIL_API_URL=https://israelrail.azurewebsites.net/stations/GetStationBoard

# ── AWS ───────────────────────────────────────────────────
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_DEFAULT_REGION=us-east-1
S3_BUCKET_NAME=israel-transit-lake

REDSHIFT_HOST=your-cluster.region.redshift.amazonaws.com
REDSHIFT_PORT=5439
REDSHIFT_DB=transit_dw
REDSHIFT_USER=admin
REDSHIFT_PASSWORD=your_redshift_password

# ── KAFKA ─────────────────────────────────────────────────
KAFKA_BOOTSTRAP_SERVERS=localhost:9092

# ── LOCAL DEV (MinIO) ─────────────────────────────────────
USE_MINIO=true
MINIO_ENDPOINT=http://localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin123